[Unit]
Description=DC Ledger service
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
RestartSec=1
User=dcl

Environment="DAEMON_HOME=/var/lib/dcl/.dcl" 
Environment="DAEMON_NAME=dcld" 
Environment="DAEMON_ALLOW_DOWNLOAD_BINARIES=true"
ExecStart=/usr/bin/cosmovisor start

[Install]
WantedBy=multi-user.target

StandardOutput=file:/var/log/dcl/log.log
StandardError=file:/var/log/dcl/error.log
